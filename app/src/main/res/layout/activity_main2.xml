<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#9BCD61"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Dear Students\nHappy Learning"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="28dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:background="@drawable/cpp"
            android:shadowColor="@color/purple_500"
            android:id="@+id/editorialBtnID"
            android:layout_marginRight="20dp"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:background="@drawable/quiz"
            android:shadowColor="@color/purple_500"
            android:id="@+id/quizBtnID"
            />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Practice makes a man perfect"
        android:textStyle="italic"
        android:textSize="20dp"
        />


</LinearLayout>