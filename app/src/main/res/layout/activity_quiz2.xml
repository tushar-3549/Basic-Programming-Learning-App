<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    tools:context=".QuizActivity2">

    <TextView
        android:id="@+id/q2TextviewID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:textStyle="bold"
        android:text="Question 02 : Choose the option not applicable for the constructor."
        android:textSize="30dp"
        android:textColor="@color/purple_500"
        />

    <RadioGroup
        android:id="@+id/q2radioGroupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/q2radioBtn1ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cannot be called explicitly."
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <RadioButton
            android:id="@+id/q2radioBtn2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cannot be implemented"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <RadioButton
            android:id="@+id/q2radioBtn3ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cannot be overloaded"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <RadioButton
            android:id="@+id/q2radioBtn4ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cannot be overridden"
            android:textStyle="bold"
            android:textSize="25sp"
            />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/preBtnD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="120dp"
            android:text="pre"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:onClick="preFunction"
            android:textSize="32sp"
            />

        <Button
            android:id="@+id/nextBtnD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="submit"
            android:textColor="@color/white"
            android:onClick="submitFunction"
            android:textSize="32sp"
            android:background="@color/purple_500"
            />
    </LinearLayout>



</LinearLayout>